function metabio_insert($node) {
  db_insert('metabio_dataset')->fields(array(
    'nid' => $node->nid,
    'name' => $node->metabio_dataset['name'],
    'description' => $node->metabio_dataset['description'],
    'collector' => $node->metabio_dataset['collector']
  ))->execute();
}

function metabio_update($node) {
  db_delete('metabio_dataset')->condition('nid', $node->nid)->execute();
  db_insert('metabio_dataset')->fields(array(
    'nid' => $node->nid,
    'name' => $node->metabio_dataset['name'],
    'description' => $node->metabio_dataset['description'],
    'collector' => $node->metabio_dataset['collector']
  ))->execute();
}

function metabio_delete($node) {
  db_delete('metabio_dataset')->condition('nid', $node->nid)->execute();
}

function metabio_load($nodes) {
  foreach($nodes as $node) {
    $nids[] = $node->nid;
  }
  $fields = array('mid', 'nid', 'name', 'description', 'collector');
  $result = db_select('metabio_dataset', 'm')->fields('m', $fields)->where('m.nid IN (:nids)', array(':nids' => $nids))->execute();
  foreach($result as $record) {
    foreach($fields as $field) {
      $nodes[$record->nid]->metabio_dataset[$field] = $record->{$field};
    }
  }
}
